<UserControl x:Class="Tonic.UI.ButtonDock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tonic.UI"
             mc:Ignorable="d" 
             x:Name="control"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="Grid">

        </Grid>
        <StackPanel Background="#11000000" Grid.Row="1" >
            <Separator Margin="0" Background="#44000000" />
            <StackPanel x:Name="ButtonStack" Orientation="Horizontal" HorizontalAlignment="{Binding ElementName=control, Path=ButtonAlignment}" Margin="10" >
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button }}">
                        <Setter Property="Margin" Value="5,0,0,0" />
                        <Setter Property="Padding" Value="5,3,5,3" />
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
